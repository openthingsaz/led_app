<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_sm_bg" >

    <include
        android:id="@+id/iclDrawTop"
        layout="@layout/layout_text_top_menu" />

    <RelativeLayout
        android:id="@+id/rlFreeDrawLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iclDrawTop"
        android:layout_above="@id/llTextMenuWrite">

        <truesolution.ledpad.asign.view.MFreeDrawView
            android:id="@+id/mFreeDrawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff00ff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/etInputText1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/text_menu_draw_hint_input"
            android:textColor="@color/c_black"
            android:textSize="@dimen/f1"
            android:padding="0dp"
            android:singleLine="true"
            android:lines="1"
            android:textColorHint="@color/c_sm_bg"
            android:layout_alignLeft="@id/mFreeDrawView"
            android:layout_alignTop="@id/mFreeDrawView"
            android:layout_alignRight="@id/mFreeDrawView"
            android:layout_alignBottom="@id/mFreeDrawView"/>

        <EditText
            android:id="@+id/etInputText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/text_menu_draw_hint_input"
            android:textColor="@color/c_black"
            android:textSize="@dimen/f1"
            android:padding="0dp"
            android:singleLine="true"
            android:lines="1"
            android:visibility="invisible"
            android:textColorHint="@color/c_sm_bg"
            android:layout_alignLeft="@id/mFreeDrawView"
            android:layout_alignTop="@id/mFreeDrawView"
            android:layout_alignRight="@id/mFreeDrawView"
            android:layout_alignBottom="@id/mFreeDrawView"/>

        <EditText
            android:id="@+id/etInputText3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/text_menu_draw_hint_input"
            android:textColor="@color/c_black"
            android:textSize="@dimen/f1"
            android:padding="0dp"
            android:singleLine="true"
            android:lines="1"
            android:visibility="invisible"
            android:textColorHint="@color/c_sm_bg"
            android:layout_alignLeft="@id/mFreeDrawView"
            android:layout_alignTop="@id/mFreeDrawView"
            android:layout_alignRight="@id/mFreeDrawView"
            android:layout_alignBottom="@id/mFreeDrawView"/>

        <EditText
            android:id="@+id/etInputText4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/text_menu_draw_hint_input"
            android:textColor="@color/c_black"
            android:textSize="@dimen/f1"
            android:padding="0dp"
            android:singleLine="true"
            android:lines="1"
            android:visibility="invisible"
            android:textColorHint="@color/c_sm_bg"
            android:layout_alignLeft="@id/mFreeDrawView"
            android:layout_alignTop="@id/mFreeDrawView"
            android:layout_alignRight="@id/mFreeDrawView"
            android:layout_alignBottom="@id/mFreeDrawView"/>

        <EditText
            android:id="@+id/etInputText5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="@string/text_menu_draw_hint_input"
            android:textColor="@color/c_black"
            android:textSize="@dimen/f1"
            android:padding="0dp"
            android:singleLine="true"
            android:lines="1"
            android:visibility="invisible"
            android:textColorHint="@color/c_sm_bg"
            android:layout_alignLeft="@id/mFreeDrawView"
            android:layout_alignTop="@id/mFreeDrawView"
            android:layout_alignRight="@id/mFreeDrawView"
            android:layout_alignBottom="@id/mFreeDrawView"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTextMenuWrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/layout_text_page_menu"
            android:id="@+id/iclPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/iclPenColor" />

        <include
            layout="@layout/layout_draw_pen_color"
            android:id="@+id/iclTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <include
            layout="@layout/layout_draw_text_bg_color"
            android:id="@+id/iclBGColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTextMenuAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/layout_text_action_time_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <include
            layout="@layout/layout_draw_action_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>